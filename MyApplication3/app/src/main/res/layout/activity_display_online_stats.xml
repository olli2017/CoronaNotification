<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayOnlineStats">

    <TextView
        android:id="@+id/deathTextView"
        android:layout_width="336dp"
        android:layout_height="151dp"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="#DC064F"
        android:gravity="center"
        android:text="TextView"
        android:textIsSelectable="true"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recoveredTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmedTextView" />

    <TextView
        android:id="@+id/confirmedTextView"
        android:layout_width="336dp"
        android:layout_height="151dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="#2196F3"
        android:breakStrategy="balanced"
        android:gravity="center"
        android:padding="10dp"
        android:shape="rectangle"
        android:text="TextView"
        android:textIsSelectable="true"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/deathTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recoveredTextView"
        android:layout_width="336dp"
        android:layout_height="151dp"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="#4DC652"
        android:breakStrategy="high_quality"
        android:gravity="center"
        android:text="TextView"
        android:textIsSelectable="true"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deathTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>