<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#1859DA" />
            <gradient android:angle="-90" android:startColor="#343C59" android:endColor="#335F9A" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#3D70D5" />
            <solid android:color="#3567AD"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#3C689D" />
            <gradient android:angle="-90" android:startColor="#8D97BA" android:endColor="#586885" />
        </shape>
    </item>
</selector>